{
    "manifest_version": 3,

    "name": "spead read new",

    "description": "Add speed reading and media speed controls on all pages",

    "version": "1.0",



    "icons": {
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },

    "background": {
        "service_worker": "sw.js"
    },

    "action":{ 
        "default_icon": {
        "48": "images/icon48.png",
        "128": "images/icon128.png"
        }
    },
    

    "permissions": ["activeTab","tabs","scripting","storage"],

    "host_permissions": ["*://*/*"],


    "web_accessible_resources":[{
        "matches": ["http://*/*", "https://*/*"],
        "resources": ["images/icon48.png", "scripts/preload.js","scripts/preload2.js"]
    }],

    "content_scripts": [
        {
          "matches": ["http://*/*","https://*/*"],
          "js": ["content-script.js"]

        },

        {
            "matches": ["http://*/*","https://*/*"],
            "js": ["frame-content2.js"],
            "all_frames":true,
            "match_about_blank": true,
            "run_at": "document_start"
          }
     
    ],


    "commands": {
        "_execute_action": {
        "suggested_key": {
            "default": "Ctrl+M",
            "mac": "Command+M"
            }
        }
    }

    

}